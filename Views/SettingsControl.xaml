<UserControl x:Class="FACTOVA_LogAnalysis.Views.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:FACTOVA_LogAnalysis.Views"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200">
    <Grid Margin="20">
        <!-- 업데이트 설정 -->
        <GroupBox Header="업데이트 설정" Grid.Row="1" Padding="15">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,20,0">
                        <TextBlock Text="현재 버전" FontSize="11" Foreground="Gray" Margin="0,0,0,5"/>
                        <TextBlock x:Name="CurrentVersionTextBlock" 
                               Text="v1.0.0" 
                               FontSize="16" 
                               FontWeight="Bold"
                               Foreground="#FF0078D7"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <Button x:Name="CheckUpdateButton" 
                            Content="🔄 지금 업데이트 확인" 
                            Width="180" 
                            Height="35"
                            Background="#FF4CAF50" 
                            Foreground="White"
                            FontWeight="Bold"
                            FontSize="13"
                            HorizontalAlignment="Left"
                            Click="CheckUpdateButton_Click"/>

                        <TextBlock x:Name="LastCheckTextBlock" 
                               Text="" 
                               FontSize="11" 
                               Foreground="Gray" 
                               Margin="0,10,0,0"/>

                        <TextBlock x:Name="RateLimitTextBlock" 
                               Text="API 호출 제한: 정보 없음" 
                               FontSize="11" 
                               Foreground="#FF666666" 
                               Margin="0,5,0,0"
                               ToolTip="GitHub API는 시간당 60회로 제한됩니다.&#x0a;수동 체크 시에만 API를 호출합니다."/>
                    </StackPanel>
                </Grid>

                <Border x:Name="UpdateStatusPanel"
                    Margin="0,15,0,0"
                    Padding="15"
                    BorderThickness="2"
                    CornerRadius="5"
                    Visibility="Collapsed">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock x:Name="UpdateStatusIcon"
                               Text="✅"
                               FontSize="24"
                               VerticalAlignment="Top"
                               Margin="0,0,15,0"/>

                        <StackPanel Grid.Column="1">
                            <TextBlock x:Name="UpdateStatusTitle"
                                   Text="최신 버전입니다"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Margin="0,0,0,5"/>
                            <TextBlock x:Name="UpdateStatusMessage"
                                   Text="현재 최신 버전을 사용 중입니다."
                                   FontSize="12"
                                   TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>
